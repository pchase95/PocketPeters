import java.util.*;
import java.io.*;
import java.net.*;

public class PositionReceiver
{
	private ObjectInputStream in;
	private PositionListener PL;
	
	public PositionReceiver(ObjectInputStream in, PositionListener PL)
	{
		this.in = in;
		this.PL = PL;
	}
	
	public void run()
	{
		while(true)
		{
			try
			{
				Peter peter = (Peter)in.readUnshared();
				PL.movePeter();
			}
			catch(Exception e)
			{
				//e.printStackTrace();
				messageListener.removeMe();
				break;
			}
		}
}