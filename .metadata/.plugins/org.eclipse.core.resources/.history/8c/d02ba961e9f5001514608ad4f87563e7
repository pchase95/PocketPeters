import java.util.*;
import java.io.*;
import java.net.*;

public class Client implements PositionListener
{
	private Map map;
	private ObjectOutputStream out;
	private Socket socket;
	ObjectInputStream in;
	PositionReceiver PR;
	
	public static void main(String[] args)
	{
		new Client();
	}
	
	public Client()
	{
		Peter peter = new Peter(200, 400);
		System.out.printf("Peter1: %s%n", peter);
		Peter peter2 = new Peter(peter);
		System.out.printf("Peter2: %s%n", peter2);
		//Connect();
	}

	private void Connect()
	{
		try
		{
			socket = new Socket("localhost", 4324);
			out = new ObjectOutputStream(socket.getOutputStream());
			in = new ObjectInputStream(socket.getInputStream());
			PR = new PositionReceiver(in, this);
			Thread t = new Thread(PR);
			t.start();
		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
	}

	
}