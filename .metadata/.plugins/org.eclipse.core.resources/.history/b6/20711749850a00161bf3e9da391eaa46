import java.io.*;
import java.net.*;

public class Client extends Thread {
	private InetAddress ipAddress;
	private DatagramSocket socket;
	private Lobby lobby;
	private String client_name;
	
	public Client(Lobby lobby, String ipAddress) {
		this.lobby = lobby;
		this.client_name = lobby.getClientName();
		try {
			this.socket = new DatagramSocket();
			this.ipAddress = InetAddress.getByName(ipAddress);
		}catch(SocketException | UnknownHostException e) {
			e.printStackTrace();
		}
		sendData(("00" + client_name + " Connected...").getBytes());
	}
	
	public void run() {
		while(true) {
			byte[] data = new byte[1024];
			DatagramPacket packet = new DatagramPacket(data, data.length);
			try {
				socket.receive(packet);
			}catch(IOException e) {
				e.printStackTrace();
			}
			String msg = new String(packet.getData()).trim();
			if(msg.substring(0, 2).equals("00")) {
				lobby.normalMsg(msg.substring(2));
			}else {
				lobby.appendMsg(msg);
			}
			System.out.printf("The Server[Address:%s  Port:%d] said:%n%s%n", packet.getAddress().getHostAddress(), packet.getPort(), msg);
		}
	}
	
	public void sendData(byte[] data) {
		DatagramPacket packet = new DatagramPacket(data, data.length, ipAddress, 4324);
		try {
			socket.send(packet);
		}catch(IOException e) {
			e.printStackTrace();
		}
	}
}
