import java.util.*;
import java.io.*;
import java.net.*;

public class Client implements PositionListener
{
	private Peter peter;
	private Map map;
	
	public static void main(String[] args)
	{
		new Client();
	}
	
	public Client()
	{
		peter = new Peter(300, 300);
		map = new Map(this, peter);
		map.buildMap();
		Connect();
	}

	private void Connect()
	{
		try
		{
			Socket socket = new Socket("localhost", 4324);
			ObjectOutputStream out = new ObjectOutputStream(socket.getOutputStream());
			ObjectInputStream in = new ObjectInputStream(socket.getInputStream());
			PositionReceiver PR = new PositionReceiver(in, this);
			Thread t = new Thread(PR);
			t.start();
			while(true)
			{
				out.writeObject(peter);
				Thread.sleep(250);
			}
		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
	}

	public void movePeter(Peter p)
	{
		map.addPeter(p);
		peter.moveMe(p.getNewX(), p.getNewY());
		peter.setMove(true);
	}

	public void removeUser()
	{
		System.exit(0);
	}
}