import java.util.*;
import java.io.*;
import java.net.*;

public class Server
{
	public static Map map = new Map();
	public static List<Peter> peters = new ArrayList<>();
	public static void main(String[] args) throws Exception
	{
		ArrayList<SSCH> clients = new ArrayList<SSCH>();
		System.out.println("Server running...");
		ServerSocket ss = new ServerSocket(4324);
		while(true)
		{
			System.out.println("Waiting for clients to connect...");
			Socket sock = ss.accept();
			Peter peter = new Peter(300, 300);
			SSCH ssch = new SSCH(sock, clients, peters);
			clients.add(ssch);
			Thread t = new Thread(ssch);
			t.start();
			System.out.printf("New client!! %d clients connected...%n", clients.size());
		}
	}
}
